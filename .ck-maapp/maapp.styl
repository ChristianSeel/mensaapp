/*
 *
 * CSS Stylesheet
 * mensa.app
 *
 */

@import "nib";
global-reset()
reset-html5()



/*
 * Variablen
 */

// background color
backgroundcolor = #fff

// global image path (relative to this file)
imagePath = "../img"

// colors
fontcolor = #444
linkcolor = #78003c
highlightcolor = #78003c
	

html, body
	width: 100%
	height: 100%
	overflow: hidden


/*
 *	 Font Styles
 */

html, body, #jqt, input, textarea
	font-size: 11px
	font-family: "Open Sans","Chalkduster",sans-serif
	line-height: 1
	color: fontcolor
	-webkit-text-size-adjust: none

	
h1,h2,h3,h4,h5,h6,.h1,.h2,.h3,.h4,.h5,.h6
	font-family: "Open Sans",sans-serif
	font-size: 12px
	line-height: 1.6
	margin: 1px 0
	color: highlightcolor
	text-shadow: 0 1px 0px #fff
	font-weight: 600
	
	
h2, .h2
	font-size: 18px
	font-weight: 700
	line-height: 1.3
	margin: 3px 0
	
h3, .h3
	font-size: 13px
	font-weight: 700
	
h4, .h4
	font-size: 12px
	text-transform: uppercase
	
h5, .h5
	font-size: 12px
	text-transform: uppercase

h6, .h6
	font-size:12px
	text-transform: uppercase

p
	font-size: 11px
	line-height: 1.5
	margin: 1px 0
	color: fontcolor

b,.bold,strong
	font-weight: 600

.hide-text
	text-indent: 100%
	white-space: nowrap
	overflow: hidden

.hidden
	display: none

.text-center
	text-align: center !important

.clearfix
	clearfix()


/*
 *
 * Body
 *
 */	

body, #splashscreen
	background: #fff url(imagePath/background@2x.png) top left
	background-attachment: fixed

#splashscreen
	z-index: 9999
	display: block
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	#splashappversion
		position: absolute
		bottom: 10px
		right: 10px
		font-size: 11px
		color: #444

	
#busy
	z-index: 9000
	display: none
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	background: rgba(0,0,0,0.7)
	background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,rgba(0,0,0,0.5)), color-stop(100%,rgba(0,0,0,0.8)))
	background: -webkit-radial-gradient(center, ellipse cover, rgba(0,0,0,0.5) 0%,rgba(0,0,0,0.8) 100%)
	background: radial-gradient(ellipse at center, rgba(0,0,0,0.5) 0%,rgba(0,0,0,0.8) 100%)
	.wrapper
		height: 150px
		width: 200px
		margin: -100px auto
		position: relative
		top: 50%
		.spinner
			position: static
			margin: 20px auto
		span
			display: block
			text-align: center
			color: #fff

#jqt
	z-index: 1000



.spinner
	position: absolute
	left: 50%
	top: 50%
	width: 125px
	height: 125px
	background: transparent url(imagePath/tellerspinner.png) center center no-repeat
	background-size: 125px
	margin: -63px 0 0 -63px
	-webkit-animation-name: spinnerRotate
	-webkit-animation-duration: 1.5s
	-webkit-animation-iteration-count: infinite
	-webkit-animation-timing-function: linear
	
.spinnertext
	display: block
	width: 80%
	position: absolute
	top: 57%
	left: 10%
	margin-top: 50px
	color: #fff
	text-align: center


@css {
	@-webkit-keyframes spinnerRotate {
		from {
			-webkit-transform:rotate(0deg);
		}
		to {
			-webkit-transform:rotate(360deg);
		}
	}
}




/*
 *
 * Header
 *
 */

#header
	z-index: 2000
	height: 60px
	width: 100%
	background: linear-gradient(top, #8c0048, #6b0037)
	box-shadow: inset 0 1px rgba(255,255,255,0.4)
	.wrapper
		width: 100%
		height: 60px
		background: transparent url(imagePath/header-glanz.png) top right no-repeat
		background-size: 275px
	h1
		display: block
		margin: 0
		padding: 0
		width: 160px
		height: 60px
		background: transparent url(imagePath/mensaapp-logo.png) top left no-repeat
		background-size: 160px

#headerleiste
	z-index: 2500
	height: 26px
	width: 100%
	background: linear-gradient(top, #ffffff, #f5f5f5)
	

.infoIcon
	z-index: 1100
	width: 36px
	height: 36px
	position: absolute
	top: 0px
	right: 1px
	background: transparent url(imagePath/infoIcon@2x.png) center center no-repeat
	background-size: 20px
	text-indent: 100%
	white-space: nowrap
	overflow: hidden
	opacity: 0.9


.navigationbar
	z-index: 2550
	position: absolute
	top: 60px
	width: 100%
	height: 26px
	text-align: center
	box-shadow: 0 0 7px rgba(0,0,0,0.2)
	border-bottom: 1px solid #cccccc
	h1
		width: auto
		height: 26px
		margin: 0 40px
		line-height: 26px
		font-size: 11px
		color: #555
		text-align: center


/*
 * Tab Bar
 */
 
#tabbar
	display: block
	position: absolute
	bottom: 0px
	width: 100%
	height: 49px
	z-index: 2000
	background: linear-gradient(top, #fafafa, #cecece)
	box-shadow: 0px 0px 4px rgba(0,0,0,0.3)
	box-sizing:border-box
	border-top: 1px solid #afafaf
	ul
		width: 100%
		height: 49px
		li
			display: block
			float: left
			width: 34.5%
			height: 100%
			a
				display: block
				width: 100%
				height: 100%
				position: relative
				color: #444
				text-align: center
				padding-top:33px
				text-decoration: none
				font-size: 10px
				text-transform: uppercase
				background-size: 25px
				background-position: 50% 5px
				background-repeat: no-repeat
			a.currrrrrrent:after
				content:""
				display: block
				position: absolute
				left: 0
				top: 0
				width: 100%
				height: 100%
				background: linear-gradient(top, rgba(255,255,255,0.2), rgba(212,212,212,0.2))
				box-shadow: inset 0 0 25px rgba(0,0,0,0.45)
			a.icon-mensen
				background-image: url(imagePath/tabbar-icon-mensen.png)
			a.icon-speiseplan
				background-image: url(imagePath/tabbar-icon-speiseplan.png)
			a.icon-konto
				background-image: url(imagePath/tabbar-icon-konto.png)
		li:last-child
			position: absolute
			right: 0
		li.bigger
			position: absolute
			top: -6px
			left: 33.33%
			width: 33.33%
			border-radius: 4px
			height: 58px
			background: linear-gradient(top, #99004d, #620032)
			border: 1px solid #70013a
			box-shadow: inset 0 1px #ff9ed0, 0 0 5px rgba(0,0,0,0.6)
			box-sizing: border-box
			a
				padding-top: 36px
				background-position: 50% 7px
				color: #fff
		li.current
			box-shadow: inset 0px -8px 21px rgba(0, 0, 0, 0.32)
			a
				font-weight: 700
		li.bigger.current
			//box-shadow: inset 0 1px #FF9ED0,0 0 5px rgba(0, 0, 0, 0.6), inset 0 0 20px rgba(255,255,255,0.4)
			box-shadow: inset 0 1px #FF9ED0,0 0 5px rgba(0, 0, 0, 0.6), inset 0px -8px 21px rgba(0, 0, 0, 0.3)
			a
				font-weight: normal
			


/*
 * ScrollWrapper
 */

.scrollwrapper
	width: 100%
	position: absolute
	top: 0px
	bottom: 49px
	z-index: 15
	overflow: hidden
	margin-top: 86px

.scrollpanel
	width: 100%
	min-height: 100%
	box-sizing:border-box
	position: relative
	padding: 0 5px 15px




/*
 *
 * Content
 *
 */

.locationspinner
	margin-top: 30px
	padding-top: 20px
	background: transparent url(imagePath/loading2x.gif) top center no-repeat
	background-size: 24px

.blanktext
	padding: 15px 20px
	text-shadow: 0 1px 0 white
	text-align: center

#speiseplan
	.skipdayleft, .skipdayright
		position: absolute
		left: 0
		top: 0
		width: 30px
		height: 26px
		background: transparent url(imagePath/icon-arrow-left.png) center center no-repeat
		background-size: 26px
	.skipdayright
		left: auto
		right: 0
		background-image: url(imagePath/icon-arrow-right.png)
	.skipdayleft.inactive, .skipdayright.inactive
		opacity: 0.4


.square
	position: relative
	width: auto
	margin: 10px 4px
	background: #f7f7f7 linear-gradient(top, #fff, #f5f5f5)
	border: 1px solid #d0d0d0
	border-radius: 4px
	box-shadow: 0 0 15px rgba(0,0,0,0.02), 0 2px 4px rgba(0,0,0,0.13), inset 0 0 5px #fff
	clearfix()
	
.innerwrapper
	padding: 10px 15px 8px
	line-height: 1.5

.square.error
	box-shadow: 0 0 15px rgba(0,0,0,0.02), 0 2px 4px rgba(0,0,0,0.13), 0 0 5px rgba(255,0,0,0.3)

.mensa
	.innerwrapper
		padding-left: 35px
		padding-right: 35px
	.innerwrapper:after
		content:""
		display: block
		position: absolute
		top: 50%
		left: 7px
		margin-top: -11px
		width: 21px
		height: 21px
		background-size: 21px
	.innerwrapper:after	
		right: 7px
		left: auto
		background-image: url(imagePath/icon-round-arrowright.png)
	.addFavorite
		display: block
		position: absolute
		top: 0
		left: 0
		width: 35px
		height: 100%
		background: transparent url(imagePath/icon-star.png) center center no-repeat
		background-size: 21px
	.addFavorite.isfavorite
		background-image: url(imagePath/icon-star-active.png)
	.org
		font-weight: 600


.mensainfo
	.innerwrapper
		padding-left: 20px
		
.mensainfo:after
	content: ""
	display: block
	position: absolute
	top: 0
	left: 0
	height: 100%
	width: 6px
	background: highlightcolor
	-webkit-border-top-left-radius: 4px
	-webkit-border-bottom-left-radius: 4px
	-moz-border-radius-topleft: 4px
	-moz-border-radius-bottomleft: 4px
	border-top-left-radius: 4px
	border-bottom-left-radius: 4px
	


.meal
	.info
		font-style: italic
	.label
		font-weight: 600
	.recommendations
		padding: 4px 15px
		background: #ddd